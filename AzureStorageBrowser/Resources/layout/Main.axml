<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/homeimage"
        android:src="@drawable/azure_storage_browser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="AZURE STORAGE BROWSER"
        android:textAlignment="center"
        android:paddingBottom="28sp"
        android:layout_gravity="center" />
    <LinearLayout
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:visibility="visible"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_gravity="center"
            android:background="#ff616161"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:choiceMode="singleChoice"
        android:id="@+id/accounts" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">
        <Button
            android:visibility="gone"
            android:id="@+id/goto_blobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blob Containers" />
        <Button
            android:visibility="gone"
            android:id="@+id/goto_tables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tables" />
        <Button
            android:visibility="gone"
            android:id="@+id/goto_queues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queues" />
    </LinearLayout>
</LinearLayout>